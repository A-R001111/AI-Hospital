# ===================================
# APPLICATION CONFIGURATION
# ===================================
APP_NAME="سامانه گزارش‌نویسی پرستاران"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True

# ===================================
# SERVER CONFIGURATION
# ===================================
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# ===================================
# DATABASE CONFIGURATION
# PostgreSQL Database Settings
# ===================================
DATABASE_URL="postgresql://user:password@localhost:5432/hospital_reports"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# ===================================
# SECURITY & AUTHENTICATION
# ===================================
# برای تولید SECRET_KEY جدید از دستور زیر استفاده کنید:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================================
# CORS SETTINGS
# ===================================
CORS_ORIGINS="http://localhost:3000,http://localhost:8000,https://yourdomain.com"
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"

# ===================================
# OPENAI CONFIGURATION (Voice-to-Text)
# ===================================
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="whisper-1"
OPENAI_ORGANIZATION=""  # optional

# ===================================
# GOOGLE CLOUD (Alternative Voice-to-Text)
# فعال کنید اگر می‌خواهید از Google Speech استفاده کنید
# ===================================
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"
# GOOGLE_CLOUD_PROJECT="your-project-id"

# ===================================
# REDIS CONFIGURATION (Caching)
# ===================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_DECODE_RESPONSES=True

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_AUDIO_FORMATS="wav,mp3,m4a,ogg,webm"
UPLOAD_DIR="uploads/audio"

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"
LOG_FORMAT="json"  # json or text

# ===================================
# PARSPACK PAAS SPECIFIC
# برای استقرار روی پارس‌پک
# ===================================
PARSPACK_APP_NAME="hospital-reports"
PARSPACK_DOMAIN="yourdomain.parspack-cdn.com"

# ===================================
# EMAIL CONFIGURATION (Optional)
# برای ارسال ایمیل‌های اعلان
# ===================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM_EMAIL="noreply@hospital.com"
SMTP_USE_TLS=True

# ===================================
# BACKUP CONFIGURATION
# ===================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE="0 2 * * *"  # هر روز ساعت 2 صبح (Cron format)
BACKUP_RETENTION_DAYS=30
